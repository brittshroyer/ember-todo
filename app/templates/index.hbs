<section class="m-5">
  <header class="d-flex justify-content-center align-items-center">
    <h1>Ember ToDo</h1>
  </header>
</section>

<div class="card sign-in">
  <div class="d-flex flex-row ">
    <div class="text-center w-50 p-4">
      <h6 class="card-title" {{action (mut newUser) false}}>Log In</h6>
    </div>
    <div class="text-center w-50 p-4">
      <h6 class="card-title" {{action (mut newUser) true}}>Sign Up</h6>
    </div>
  </div>
  <div class="card-body">
    {{#if newUser}}
      <p>New User</p>
    {{else}}
      <p>Existing User</p>
    {{/if}}
  </div>
</div>

